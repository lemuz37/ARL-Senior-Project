<Window x:Class="UnBox3D.Views.SettingsWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="Settings"
       Height="700" Width="700"
       WindowStartupLocation="CenterOwner"
       ResizeMode="NoResize">

   <ScrollViewer VerticalScrollBarVisibility="Auto">
       <StackPanel Margin="20" Width="600" HorizontalAlignment="Center">

           <!-- App Settings -->
           <GroupBox Header="Application Settings" Margin="0 0 0 20">
               <StackPanel Margin="10">
                   <TextBlock Text="Splash Screen Duration (seconds):"/>
                   <TextBox Name="splash_screen_opt" TextChanged="TextBox_InputChanged"/>

                   <TextBlock Text="Export Path:" Margin="0 10 0 0"/>
                   <TextBox Name="export_path_opt" TextChanged="TextBox_PathChanged"/>
               </StackPanel>
           </GroupBox>

           <!-- Assimp Import Settings -->
           <GroupBox Header="Import Options (Assimp)" Margin="0 0 0 20">
               <StackPanel Margin="10">
                   <CheckBox Name="triangulation_opt" Content="Enable Triangulation" Checked="CheckBox_Toggled" Unchecked="CheckBox_Toggled"/>
                   <CheckBox Name="join_identical_vertices_opt" Content="Join Identical Vertices" Checked="CheckBox_Toggled" Unchecked="CheckBox_Toggled"/>
                   <CheckBox Name="component_removal_opt" Content="Remove Components" Checked="CheckBox_Toggled" Unchecked="CheckBox_Toggled"/>
                   <CheckBox Name="split_large_meshes_opt" Content="Split Large Meshes" Checked="CheckBox_Toggled" Unchecked="CheckBox_Toggled"/>
                   <CheckBox Name="optimize_meshes_opt" Content="Optimize Meshes" Checked="CheckBox_Toggled" Unchecked="CheckBox_Toggled"/>
                   <CheckBox Name="find_degens_opt" Content="Find Degenerates" Checked="CheckBox_Toggled" Unchecked="CheckBox_Toggled"/>
                   <CheckBox Name="find_invalid_data_opt" Content="Find Invalid Data" Checked="CheckBox_Toggled" Unchecked="CheckBox_Toggled"/>
                   <CheckBox Name="ignore_invalid_data_opt" Content="Ignore Invalid Data" Checked="CheckBox_Toggled" Unchecked="CheckBox_Toggled"/>
               </StackPanel>
           </GroupBox>

           <!-- Rendering Settings -->
           <GroupBox Header="Rendering Settings" Margin="0 0 0 20">
               <StackPanel Margin="10">
                   <TextBlock Text="Background Color:"/>
                   <TextBox Name="background_color_opt" TextChanged="TextBox_InputChanged"/>

                   <TextBlock Text="Mesh Color:" Margin="0 10 0 0"/>
                   <TextBox Name="mesh_color_opt" TextChanged="TextBox_InputChanged"/>

                   <TextBlock Text="Mesh Highlight Color:" Margin="0 10 0 0"/>
                   <TextBox Name="mesh_highlight_color_opt" TextChanged="TextBox_InputChanged"/>

                   <TextBlock Text="Render Mode:" Margin="0 10 0 0"/>
                   <TextBox Name="render_mode_opt" TextChanged="TextBox_InputChanged"/>

                   <TextBlock Text="Shading Model:" Margin="0 10 0 0"/>
                   <TextBox Name="shading_model_opt" TextChanged="TextBox_InputChanged"/>

                   <CheckBox Name="enable_lighting_opt" Content="Enable Lighting" Checked="CheckBox_Toggled" Unchecked="CheckBox_Toggled" Margin="10 10 0 0"/>
                   <CheckBox Name="enable_shadows_opt" Content="Enable Shadows" Checked="CheckBox_Toggled" Unchecked="CheckBox_Toggled"/>
               </StackPanel>
           </GroupBox>

           <!-- UI Settings -->
           <GroupBox Header="UI Settings" Margin="0 0 0 20">
               <StackPanel Margin="10">
                   <TextBlock Text="Tool Strip Position:"/>
                   <TextBox Name="tool_strip_position_opt" TextChanged="TextBox_InputChanged"/>

                   <TextBlock Text="Window Size:" Margin="10 10 0 0"/>
                   <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                       <TextBox Name="default_window_width_opt" Width="80" TextChanged="TextBox_InputChanged"/>
                       <TextBlock Text="x"/>
                       <TextBox Name="default_window_height_opt" Width="80" TextChanged="TextBox_InputChanged"/>
                   </StackPanel>

                   <CheckBox Name="fullscreen_opt" Content="Start in Fullscreen Mode" Checked="CheckBox_Toggled" Unchecked="CheckBox_Toggled" Margin="10 10 0 0"/>
               </StackPanel>
           </GroupBox>

           <!-- Camera Settings -->
           <GroupBox Header="Camera &amp; Navigation" Margin="0 0 0 20">
               <StackPanel Margin="10">
                   <TextBlock Text="Yaw Sensitivity:"/>
                   <TextBox Name="camera_yaw_factor_opt" TextChanged="TextBox_InputChanged"/>

                   <TextBlock Text="Pitch Sensitivity:" Margin="0 10 0 0"/>
                   <TextBox Name="camera_pitch_factor_opt" TextChanged="TextBox_InputChanged"/>

                   <TextBlock Text="Pan Sensitivity:" Margin="0 10 0 0"/>
                   <TextBox Name="camera_pan_factor_opt" TextChanged="TextBox_InputChanged"/>

                   <TextBlock Text="Zoom Sensitivity:" Margin="0 10 0 0"/>
                   <TextBox Name="zoom_factor_opt" TextChanged="TextBox_InputChanged"/>

                   <TextBlock Text="Mesh Rotation Sensitivity:" Margin="0 10 0 0"/>
                   <TextBox Name="mesh_rotate_factor_opt" TextChanged="TextBox_InputChanged"/>

                   <TextBlock Text="Mesh Movement Sensitivity:" Margin="0 10 0 0"/>
                   <TextBox Name="mesh_move_factor_opt" TextChanged="TextBox_InputChanged"/>
               </StackPanel>
           </GroupBox>

           <!-- Units -->
           <GroupBox Header="Units &amp; Measurement" Margin="0 0 0 20">
               <StackPanel Margin="10">
                   <TextBlock Text="Default Unit:"/>
                   <TextBox Name="default_unit_opt" TextChanged="TextBox_InputChanged"/>

                   <CheckBox Name="enable_metric_system_opt" Content="Use Metric System" Checked="CheckBox_Toggled" Unchecked="CheckBox_Toggled" Margin="10 10 0 0"/>
               </StackPanel>
           </GroupBox>

           <!-- Back Button -->
           <Button Content="Back" Click="BackButton_Click" HorizontalAlignment="Center" Width="120" Margin="0 20 0 0"/>
       </StackPanel>
   </ScrollViewer>
</Window>
